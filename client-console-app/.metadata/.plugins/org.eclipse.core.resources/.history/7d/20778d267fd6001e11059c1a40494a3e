package main;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.io.ObjectInputStream.GetField;

import account.UserAccount;
import command.*;
import command.Command;
import service.UserAccountService;

public class Main {

	public static void main(String[] args) {
		try {
			BufferedReader reader = new BufferedReader(new InputStreamReader(System.in));
			UserAccountService accountService = UserAccountService.getInstance();
			
			while (true) {
				System.out.print("Enter your card number: ");
				String cardNumber = reader.readLine();

				System.out.print("Enter your PIN: ");
				String pin = reader.readLine();
				
				UserAccount account = accountService.login(cardNumber, pin);
				
				if (account == null) {
					System.out.print("Invalid credentials!\n");
					continue;
				}

				while (true) {
					getMenuChoice();
					int choice = Integer.parseInt(reader.readLine());
					Command command = null;
					
					switch (choice) {
					case 1:
						command = new AvailableBalanceCommand(accountService);
						break;
					case 2:
						double depositAmount = atm.getAmountInput("deposit");
						atm.runCommand(new DepositCommand(account, depositAmount));
						break;
					case 3:
						double withdrawAmount = atm.getAmountInput("withdraw");
						atm.runCommand(new WithdrawCommand(account, withdrawAmount));
						break;
					case 4:
						System.out.println("Thank you for using the ATM");
						System.exit(0);
					default:
						System.out.println("Invalid choice");
					}
					
					command.execute(account);
				}
			}
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
	
    public static void getMenuChoice() {
        System.out.println("Welcome to the ATM");
        System.out.println("1. Check Balance");
        System.out.println("2. Deposit");
        System.out.println("3. Withdraw");
        System.out.println("4. Exit");
        System.out.print("Enter your choice: ");
    }

}
